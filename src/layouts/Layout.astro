---
import NavMenu from '@components/main/menu';
import { getRelativeLocaleUrl } from 'astro:i18n';

interface Props {
	title: string;
}

const { title } = Astro.props;
const path = Astro.url.pathname;
const cleanPathname = path.replace(/^\/(en|es)(\/|$)/, '/');
const actualpathEn = getRelativeLocaleUrl("en", cleanPathname);
const actualpathEs = getRelativeLocaleUrl("es", cleanPathname);

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Leonardo Castro, desarrollador de software con experiencia en tecnologÃ­as web como Go, React y bases de datos. Descubre mi experiencia en desarrollo full stack y proyectos innovadores." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <script>
            if (localStorage.theme === 'dark') {
                document.documentElement.classList.add('dark');
            } else if (localStorage.theme === 'light') {
                document.documentElement.classList.remove('dark');
            } else {
                if (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    document.documentElement.classList.add('dark');
                } else {
                    document.documentElement.classList.remove('dark');
                }
            }
        </script>
	</head>
	<body class="text-black bg-slate-200 dark:text-white dark:bg-[#020202]">
		<slot />
		<NavMenu actualpathEn={actualpathEn} actualpathEs={actualpathEs} client:visible />
	</body>
</html>
